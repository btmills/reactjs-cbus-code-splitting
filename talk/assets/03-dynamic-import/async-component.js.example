import React from 'react';

class AsyncMap extends React.Component {

  constructor(props) {
    super(props);

    this.state = {
      Component: null
    };
  }

  componentDidMount() {
    import('./map').then(
      ({ default: Component }) => {
        this.setState({
          Component
        });
      }
    );
  }

  render() {
    const { Component } = this.state;

    if (!Component) {
      return (
        <p>Loading...</p>
      );
    } else {
      return (
        <Component {...this.props} />
      );
    }
  }

}

class App extends React.Component {
  render() {
    return <AsyncMap />;
  }
}

export default App;
